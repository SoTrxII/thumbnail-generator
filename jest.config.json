{
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "node",
  "extensionsToTreatAsEsm": [".ts"],
  "moduleNameMapper": {
    "#core/(.*)": "<rootDir>/dist/$1"
  },
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!old-src/**/*.ts",
    "!dist/**/*.js",
    "!src/**/*.config.ts",
    "!src/**/*.d.ts",
    "!src/**/*.integration.ts"
  ],
  "modulePathIgnorePatterns": [
    "<rootDir>/src-old",
    "<rootDir>/dist",
    "<rootDir>/build"
  ]
}
